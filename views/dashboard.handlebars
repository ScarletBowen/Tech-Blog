<header class="p-4 c-heading u-xlarge">
  <h1>Your Blog Posts</h1>
</header>

{{#if blogs.length}}
  {{#each blogs}}
    <section class="card">
      <a href="/blog/{{id}}" class="card-body">
        <h3 class="card-title">{{title}}</h3>
        <h5>Posted by {{user.username}} on {{format_date date_created}}</h5>
        <p class="card-text">{{content}}</p>
      </a>
      <button class="btn btn-primary edit-btn" data-id="{{id}}">Edit</button>
      <button class="btn btn-primary delete-btn" data-id="{{id}}">Delete</button>
    </section>
  {{/each}}
{{else}}
  <p>You have no blog posts yet.</p>
{{/if}}

<footer class="footer flex-row justify-center">
  <button class="btn btn-primary" id="add-post-btn"><a href="/dashboard/new" id="addHref">Add a new post</a></button>
</footer>

<script src="/js/logout.js"></script>
<script src="/js/edit.js"></script>
<script src="/js/newblog.js"></script>
