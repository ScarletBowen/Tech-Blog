<header class="p-4 c-heading u-xlarge">
  <h1>Your Blog Posts</h1>
</header>

{{#if blogs.length}}
  {{#each blogs}}
    <section class="card">
      <a id="postHref" href="/dashboard/edit/{{id}}" class="card-body" data-id="{{id}}">{{title}}</a>
        <h5>Posted by {{user.username}} on {{format_date date_created}}</h5>
        <p class="card-text">{{content}}</p>
      </a>
    </section>
  {{/each}}
{{else}}
  <p>You have no blog posts yet.</p>
{{/if}}



<footer class="footer flex-row justify-center">
  <button class="btn btn-primary new-btn"><a id="postHref" href="/dashboard/new">Add a new post</a></button>
</footer>

<script src="/js/logout.js"></script>
<script src="/js/newblog.js"></script>
