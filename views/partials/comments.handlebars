{{#each comments as |comment|}} 
  <div class="card">
    <div class="card-header">
      <h3>{{user.username}}</h3>
    </div>

    <div class="card-body">
      <p>{{comment_text}}</p>
    </div>

    <div class="card-footer">
      <p>Created on {{format_date date_created}}</p>
    </div>
  </div>
{{/each}}

